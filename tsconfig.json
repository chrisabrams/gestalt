{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,
    "target": "es6"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types",
    "@types"
  ]
}
